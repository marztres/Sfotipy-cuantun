@import "normalize.styl"
@import "fonts.styl"

gris_claro = #818181
gris_oscuro = #333333
fuscia = #BD255B

a 
	text-decoration none
body
	font-size 16px
	font-family 'Varela Round', sans-serif
figure 
	margin 0
img 
	vertical-align top
.action 
	color white
	font-size 1.2em
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray 
		color gris_claro
.actions 
	bottom 0
	left 0
	position absolute
	right 0
	background rgba(black,.3)
.author 
	color gris_claro
.border-bottom
	border-bottom 1px solid gris_claro 
.border-radius 
	border-radius 50%
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
.center-block
	margin 0 auto
.center-text
	text-align center
.container 
	font-size 0		
	padding 1.4rem
	text-align center
.header 
	height 3.5em
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
.menu
	display none
.name 
	color gris_oscuro
.song
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-left 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p 
		margin .5em 0
.playing 
	&.small
		width 20em
.padding 
	padding 1em
.padding-tb
	padding 1em 0
.progress
	margin 1em 0
	position relative
	.min
	.max
		position absolute
		font-size .8em
		top -5px
	.min 
		left 0
	.max 
		right 0
	.total
		background gris_claro
		border-radius 5%
		height 5px
		width 75%
		margin 0 auto
	.state 
		background fuscia
		border-radius 5%
		height 5px 
		width 30%
		position relative
	.circle 
		background gris_oscuro
		border-radius 50%
		height 10px 
		width 10px
		position absolute
		right 0
		top -2px
.relative
	position relative
.right-text 
	text-align right
